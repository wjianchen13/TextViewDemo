<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.textviewdemo.vertical.MyLayout
        android:id="@+id/llyt_frame"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="#ff00ff00">

        <com.example.textviewdemo.vertical.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="100sp"
            android:text="你 he 12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </com.example.textviewdemo.vertical.MyLayout>

    <LinearLayout
        android:id="@+id/llyt_frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ff00ff00">

        <com.example.textviewdemo.vertical.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="100dp"
            android:text="你 he 12" />

    </LinearLayout>

    <com.example.textviewdemo.vertical.VerticalCenterTextView
        android:id="@+id/tv_test"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#ff0000ff"
        android:text="你 he 12asdkfjkasdfjkasdk"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="#ff00ff00"/>

</LinearLayout>