<resources>

    <declare-styleable name="GradientTextView">
        <attr name="gradient_startColor" format="reference|color" />
        <attr name="gradient_endColor" format="reference|color" />
        <attr name="gradient_direction" format="enum">
            <enum name="leftToRight" value="1" />
            <enum name="topToBottom" value="2" />
        </attr>
        <attr name="gradient_animate" format="boolean" />
        <attr name="gradient_speed" format="enum">
            <enum name="slow" value="20" />
            <enum name="normal" value="10" />
            <enum name="fast" value="5" />
        </attr>
    </declare-styleable>

    <!-- 垂直居中TextView -->
    <declare-styleable name="CenterTextView">
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:textStyle" />
    </declare-styleable>


    <declare-styleable name="MarqueeView">
        <attr name="scrollType">
            <enum name="no" value="1" />
            <enum name="vertical" value="2" />
            <enum name="horizontal" value="3" />
        </attr>
        <attr name="speedType">
            <enum name="slow" value="4" />
            <enum name="normal" value="5" />
            <enum name="fast" value="6" />
            <enum name="express" value="7" />
        </attr>

        <attr name="textColor" format="color" />

        <!--行高，只对垂直滚动有效-->
        <attr name="lineSpace" format="integer" />
    </declare-styleable>

    <declare-styleable name="GradientAnimTextView">
        <attr name="text_color" format="color|reference" />
        <attr name="mode" format="enum">
            <enum name="normal" value="0" /> <!-- 正常模式 -->
            <enum name="span" value="1" /> <!-- span模式 -->
            <enum name="scroll" value="2" /> <!-- 滚动模式 -->
        </attr>
    </declare-styleable>

    <!-- 自动滚动的textview -->
    <declare-styleable name="rainbow_view">
        <attr name="marquee_text_color" format="color|reference" /> <!-- id字体颜色 -->
        <attr name="marquee_text_size" format="dimension" /> <!-- id字体大小 -->
        <attr name="marquee_auto_width" format="boolean" /> <!-- 最大宽度 -->
        <attr name="marquee_max_size" format="dimension" /> <!-- 最大宽度 -->
        <attr name="marquee_layout_gravity" format="integer" /> <!-- 对齐方式 -->
        <attr name="marquee_text_direction" format="integer" /> <!-- 滚动方向 -->
    </declare-styleable>

</resources>